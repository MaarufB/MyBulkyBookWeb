@model Company

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Id" hidden />

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="row pb-2">
					<h2 class="text-primary">@(Model.Id!=0? "Update": "Create") Company</h2>
					<hr />
				</div>

				<div class="mb-3">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name"></span>
				</div>

				<div class="mb-3">
					<label asp-for="PhoneNumber"></label>
					<input asp-for="PhoneNumber" rows="3 " class="form-control" />
					<span asp-validation-for="PhoneNumber"></span>
				</div>

				<div class="mb-3 col-6">
					<label asp-for="StreetAddress"></label>
					<input asp-for="StreetAddress" class="form-control" />
					<span asp-validation-for="StreetAddress"></span>
				</div>

				<div class="mb-3 col-6">
					<label asp-for="City"></label>
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City"></span>
				</div>

				<div class="mb-3 col-6">
					<label asp-for="State"></label>
					<input asp-for="State" class="form-control" />
					<span asp-validation-for="State"></span>
				</div>

				<div class="mb-3 col-6">
					<label asp-for="PostalCode"></label>
					<input asp-for="PostalCode" class="form-control" />
					<span asp-validation-for="PostalCode"></span>
				</div>

				<div class="col-12">
					@if(Model.Id!=0)
					{
						<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
					}
					else
					{
						<button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
					}
					<a asp-controller="Company" asp-action="Index" class="btn btn-primary" style="width:150px">
						Back to List
					</a>
				</div>
			</div>
		</div>
	</div>


</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

